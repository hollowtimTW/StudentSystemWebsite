        <nav>
            <div class="container d-flex justify-content-between align-items-center">
                <ol>
                    <li><a asp-area="" asp-controller="Template" asp-action="Index">首頁</a></li>
                    <li><a asp-area="job_vacancy" asp-controller="Job" asp-action="Index">就業媒合</a></li>
                    <li><a asp-area="job_vacancy" asp-controller="Job" asp-action="CompanyDetails" asp-route-CompanyID="@Model.CompanyID">@Model.CompanyName</a></li>
