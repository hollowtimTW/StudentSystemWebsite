<!-- 應徵 Modal -->
<div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="applyModalLabel">發送應徵信</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="btnCloseApply"></button>
            </div>
            <div class="modal-body" id="apply_context">
                <!-- 互動視窗內容 -->
            </div>

            <div class="modal-footer">
                <input type="submit" class="btn btn-normal" id="btnSummitApply" value="確認送出" />
                @* <button type="button" class="btn btn-preview">
                <a asp-area="job_vacancy" asp-controller="Job" asp-action="ResumePreview" target="_blank">送出前預覽</a>
                </button> *@
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/job_vacancy/jobcommon.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>
    <script>

        //呼叫履歷資料，返回應徵信編輯頁
        function popup_apply(studentId) {

            const applyContext = $("#apply_context");
            $.ajax({
                type: 'GET',
                url: '/job_vacancy/job/GetResumeTitles/',
                data: { studentID: studentId, jobID: '@Model.JobID' },
                success: function (result) {
                    console.log('呼叫應徵信 success');
                    // 清空並設置內容
                    applyContext.html(result);

                    //設定應徵信字數顯示
                    const textarea = document.querySelector('.word_count_textarea');
                    const wordCount = document.getElementById('word-count');
                    const maxLength = 500;
                    wordCount.textContent = textarea.value.length; // 初始化字數顯示

                    textarea.addEventListener('input', function () {
                        let content = textarea.value;
                        let currentLength = content.length; // 獲取當前字數

                        // 如果超過最大字數，則截斷內容並更新 textarea 內容與字數顯示
                        if (currentLength > maxLength) {
                            textarea.value = content.slice(0, maxLength);
                            currentLength = textarea.value.length;
                        }

                        // 更新字數顯示
                        wordCount.textContent = currentLength;
                    });
                },
                error: function (error) {
                    console.error('呼叫應徵信 error', error);
                    // 顯示錯誤提示給用戶
                    applyContext.html(`<div class="alert alert-danger" role="alert">請求失敗：${error.statusText}</div>`);
                }
            });
        }

        // 提交應徵信
        document.getElementById('btnSummitApply').addEventListener('click', async (event) => {

            event.preventDefault();  //停止預設行為

            const formData = new FormData(document.getElementById('formApply'));

            for (const pair of formData.entries()) {
                console.log(pair[0] + ': ' + pair[1]);
            }
            //return;

            const url = '/job_vacancy/job/ApplyLetter/';
            const response = await fetch(url, {
                body: formData,
                method: 'POST'
            });

            const data = await response.json();
            if (response.ok) {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '應徵成功',
                        customClass: {
                            confirmButton: 'btn btn-normal',
                        },
                        confirmButtonColor: '#008374',
                    });

                    $('#apply_context').empty(); //清空partialview的內容
                    document.getElementById('btnCloseApply').click();  //關閉modal
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: '應徵送出失敗',
                        text: data.message,
                        customClass: {
                            confirmButton: 'btn btn-normal',
                        },
                        confirmButtonColor: '#008374',
                    });
                }
            } else {
                Swal.fire({
                    icon: 'error',
                    title: '應徵送出失敗',
                    text: data.message,
                    customClass: {
                        confirmButton: 'btn btn-normal',
                    },
                    confirmButtonColor: '#008374',
                });
            }
        });


        document.addEventListener('DOMContentLoaded', function () {

            //設置職缺收藏按鍵監聽事件
            const likeBtn = document.querySelector('.btn-like');
            likeBtn.addEventListener('click', function () {
                let jobID = $(this).attr('job-id');
                $.ajax({
                    type: 'GET',
                    url: '/job_vacancy/job/ToggleFavorite/' + jobID,
                    success: function (result) {
                        console.log('啟動收藏開關 success');

                        // 切換按鈕的 active 狀態
                        likeBtn.classList.toggle('active');

                    },
                    error: function (error) {
                        console.error('啟動收藏開關 error', error);
                    }
                });
            });
        });

    </script>
}