<script>

    $(document).ready(function () {

        // ========= 載入資料時 =========
        // 處理希望薪資的選項
        switch ("@Html.Raw(Model.HopeSalary)".trim()) {
            case "面議":
                document.getElementById('hopeSalary1').checked = true;
                break;
            case "論件計酬":
                document.getElementById('hopeSalary2').checked = true;
                break;
            default:
                document.getElementById('hopeSalary3').checked = true;
                salaryInput.value = hopeSalary;
                salaryInput.style.visibility = "visible";
                break;
        }

        // ========= CKEditor 相關 =========
        // DecoupledEditor
        // .create(document.querySelector('.document-editor__editable'), {
        //     cloudServices: {
        //         // A configuration of CKEditor Cloud Services.
        //         // ...
        //     }
        // })
        // .then(editor => {
        //     const toolbarContainer = document.querySelector('.document-editor__toolbar');

        //     toolbarContainer.appendChild(editor.ui.view.toolbar.element);

        //     window.editor = editor;
        // })
        // .catch(err => {
        //     console.error(err);
        // });


        // ====================== 事件監聽器 ===========================

        // 顯示圖片
        document.getElementById('Photo').addEventListener('change', function (event) {
            var inputFile = event.target;
            var img = document.getElementById('previewImage');
            previewImage(inputFile, img);
        });

        // 當選擇"自訂薪資"時，顯示薪資輸入框
        document.getElementById('hopeSalary3').addEventListener("change", function () {
            if (this.checked) {
                document.getElementById('salaryInput').style.visibility = "visible";
            }
        });

        // 當選擇其他選項時，隱藏薪資輸入框
        document.querySelectorAll('input[name="HopeSalary"]:not(#hopeSalary3)').forEach(function (radio) {
            radio.addEventListener("change", function () {
                document.getElementById('salaryInput').style.visibility = "hidden";
            });
        });

        // 新增工作經驗（開啟編輯區）
        document.getElementById("btnExpAdd").addEventListener("click", function () {
            document.getElementById("expEditArea").style.display = "block";
            document.getElementById("expListArea").style.display = "none";
            document.getElementById("btnExpAdd").style.display = "none";
        });
        // 確認工作經驗（關閉編輯區並顯示列表）
        document.getElementById("btnExpEditConfirm").addEventListener("click", function () {
            document.getElementById("expEditArea").style.display = "none";
            document.getElementById("btnExpAdd").style.display = "block";
            document.getElementById("expListArea").style.display = "block";
        });
        // 取消工作經驗（關閉編輯區）
        document.getElementById("btnExpEditCancel").addEventListener("click", function () {
            document.getElementById("expEditArea").style.display = "none";
            document.getElementById("btnExpAdd").style.display = "block";
        });

    });

    // ========= 照片預覽函式 =========
    function previewImage(inputFile, img) {
        if (inputFile.files && inputFile.files[0]) {
            let allowType = "image.*";
            // 檢查上傳的檔案類型是否符合允許的檔案類型
            if (inputFile.files[0].type.match(allowType)) {
                // 創建 FileReader 物件用於讀取檔案
                let reader = new FileReader();
                reader.onload = function (e) {
                    $(img).attr('src', e.target.result); // 將 img 包裝在 $() 函數中
                    $(img).attr('title', inputFile.files[0].name); // 將 img 包裝在 $() 函數中
                    //$(".btn").prop('disabled', false);
                };
                // 開始讀取檔案內容，這會觸發上述的 reader.onload 事件
                reader.readAsDataURL(inputFile.files[0]);
            } else {
                alert("不支援的檔案上傳格式！");
                //$(".btn").prop('disabled', true);
            }
        }
    }
    
</script>