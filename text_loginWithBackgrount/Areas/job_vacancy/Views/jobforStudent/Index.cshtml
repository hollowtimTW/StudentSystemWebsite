@section Scripts {
    <script src="~/js/job_vacancy/jobcommon.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>

    <script>
        const studentID = @User?.FindFirst("StudentId")?.Value;
        const tabContext = $("#tab_context");

        function switchContext(tabName) {

            var tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => tab.classList.remove('active'));

            // 將點擊的tab添加active屬性
            var clickedTab = document.querySelector(`.tab[onclick="switchContext('${tabName}')"]`);
            clickedTab.classList.add('active');

            switch (tabName) {
                case 'myResumes':
                    GetMyResumes();
                    break;
                case 'myApplyRecords':
                    GetMyApplyRecords();
                    break;
                case 'myFavoritesJobs':
                    GetMyFavoritesJobs();
                    break;
                case 'myRecommendedJobs':
                    GetMyRecommendedJobs();
                    break;
                default:
                    GetMyResumes(); //預設為我的履歷清單
                    break;
            }
        }

        //顯示履歷清單（返回_MyResumesPartial）
        function GetMyResumes() {
            $.ajax({
                type: 'GET',
                url: '/job_vacancy/jobapi/GetMyResumes/' + studentID,
                success: function (result) {
                    console.log('顯示履歷清單 success');
                    // 清空並設置內容
                    tabContext.html(result);
                },
                error: function (error) {
                    console.error('顯示履歷清單 error', error);
                    // 顯示錯誤提示給用戶
                    tabContext.html(`<div class="alert alert-danger" role="alert">請求失敗：${error.statusText}</div>`);
                }
            });
        }

        //顯示應徵紀錄清單（返回_MyApplyRecordsPartial）
        function GetMyApplyRecords() {
            $.ajax({
                type: 'GET',
                url: '/job_vacancy/jobapi/GetMyApplyRecords/' + studentID,
                success: function (result) {
                    console.log('顯示應徵紀錄 success');
                    // 清空並設置內容
                    tabContext.html(result);

                    //設置職缺收藏按鍵監聽事件
                    const likeBtns = document.querySelectorAll('.btn-like');
                    likeBtns.forEach(function (btn) {
                        btn.addEventListener('click', function () {
                            let jobID = this.getAttribute('job-id');
                            let likeBtn = this;

                            $.ajax({
                                type: 'GET',
                                url: '/job_vacancy/job/ToggleFavorite/' + jobID,
                                success: function (result) {
                                    console.log('啟動收藏開關 success');

                                    // 切換按鈕的 active 狀態
                                    likeBtn.classList.toggle('active');
                                },
                                error: function (error) {
                                    console.error('啟動收藏開關 error', error);
                                }
                            });
                        });
                    });
                },
                error: function (error) {
                    console.error('顯示應徵紀錄 error', error);
                    // 顯示錯誤提示給用戶
                    tabContext.html(`<div class="alert alert-danger" role="alert">請求失敗：${error.statusText}</div>`);
                }
            });
        }

        //顯示收藏清單（返回_MyFavoritesJobsPartial）
        function GetMyFavoritesJobs() {
            $.ajax({
                type: 'GET',
                url: '/job_vacancy/jobapi/GetMyFavoritesJobs/' + studentID,
                success: function (result) {
                    console.log('顯示收藏清單 success');
                    // 清空並設置內容
                    tabContext.html(result);

                    //設置職缺收藏按鍵監聽事件
                    const likeBtns = document.querySelectorAll('.btn-like');
                    likeBtns.forEach(function (btn) {
                        btn.addEventListener('click', function () {
                            let jobID = this.getAttribute('job-id');
                            let likeBtn = this;

                            $.ajax({
                                type: 'GET',
                                url: '/job_vacancy/job/ToggleFavorite/' + jobID,
                                success: function (result) {
                                    console.log('啟動收藏開關 success');

                                    // 切換按鈕的 active 狀態
                                    likeBtn.classList.toggle('active');

                                    // 重新載入收藏清單畫面
                                    GetMyFavoritesJobs()
                                },
                                error: function (error) {
                                    console.error('啟動收藏開關 error', error);
                                }
                            });
                        });
                    });
                },
                error: function (error) {
                    console.error('顯示收藏清單 error', error);
                    // 顯示錯誤提示給用戶
                    tabContext.html(`<div class="alert alert-danger" role="alert">請求失敗：${error.statusText}</div>`);
                }
            });
        }

        //顯示推薦清單（返回_MyRecommendedJobsPartial）
        function GetMyRecommendedJobs() {
            $.ajax({
                type: 'GET',
                url: '/job_vacancy/jobapi/GetMyRecommendedJobs/' + studentID,
                success: function (result) {
                    console.log('顯示推薦清單 success');
                    // 清空並設置內容
                    tabContext.html(result);

                    //設置職缺收藏按鍵監聽事件
                    const likeBtns = document.querySelectorAll('.btn-like');
                    likeBtns.forEach(function (btn) {
                        btn.addEventListener('click', function () {
                            let jobID = this.getAttribute('job-id');
                            let likeBtn = this;

                            $.ajax({
                                type: 'GET',
                                url: '/job_vacancy/job/ToggleFavorite/' + jobID,
                                success: function (result) {
                                    console.log('啟動收藏開關 success');

                                    // 切換按鈕的 active 狀態
                                    likeBtn.classList.toggle('active');
                                },
                                error: function (error) {
                                    console.error('啟動收藏開關 error', error);
                                }
                            });
                        });
                    });
                },
                error: function (error) {
                    console.error('顯示推薦清單 error', error);
                    // 顯示錯誤提示給用戶
                    tabContext.html(`<div class="alert alert-danger" role="alert">請求失敗：${error.statusText}</div>`);
                }
            });
        }

        // function openTab(event, tabName) {
        //     const tabLinks = document.getElementsByClassName("tab");
        //     const tabContent = document.getElementsByClassName("tab-page");

        //     for (let i = 0; i < tabLinks.length; i++) {
        //         tabLinks[i].classList.remove("active");
        //         tabContent[i].classList.remove("active");
        //     }
        //     document.getElementById(tabName).classList.add('active');
        //     event.currentTarget.classList.add("active");

        //     // if (tabName == 'tab2') { loadDataTableData(); }
        // }


        document.addEventListener('DOMContentLoaded', function () {
            //預設載入履歷清單
            switchContext('myResumes');
        });


    </script>
}