@model ResumeCreateViewModel
<style>
    img {
        max-width: 240px;
        max-height: 240px;
        width: auto;
        height: auto;
        border: 1px solid transparent;
        border-radius: 6px;
    }
</style>

@if (Model.Photo != null)
{
    <img id="previewImage" src="@Url.Action("ShowPhoto", "jobforStudent", new {studentID = Model.StudentID})" title="@Model.Name" />
}
else
{
    <img id="previewImage" src="@Url.Content("~/images/user.jpg")" title="尚無圖片" />
}
