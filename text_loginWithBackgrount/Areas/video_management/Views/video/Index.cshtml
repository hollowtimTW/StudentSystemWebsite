@{
    ViewData["Title"] = "教材影片";
}
@section BreadcrumbsSection {
    <!-- ======= Breadcrumbs 麵包屑導航列 ======= -->
    <div class="breadcrumbs">
        <div class="page-header d-flex align-items-center" style="background-image: url('');">
            <div class="container position-relative">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-6 text-center">
                        <h2>@ViewData["Title"]</h2>
                        <p>使用影片輔助學習，24小時不間斷!</p>
                    </div>
                </div>
            </div>
        </div>
        <nav>
            <div class="container">
                <!-- 導覽列項目設置，請根據目前網頁的深度增減 -->
                <ol>
                    <li><a asp-area="" asp-controller="Template" asp-action="Index">首頁</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
                <button type="button" class="btn btn-outline-success">
                    <a asp-area="video_management" asp-controller="videoforStudent" asp-action="videoshopping">影片商城</a>
                </button>
            </div>
        </nav>
    </div>
}
<!-- 輪播卡片區（共有5張） -->
<section id="testimonials" class="testimonials">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>推薦熱門課程</h2>
            <p>
                解鎖專業技能的精選課程，助你掌握前沿科技
            </p>
        </div>

        <div class="slides-3 swiper" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">

                <!-- 輪播卡片1 -->
                <div class="swiper-slide">
                    <div class="testimonial-wrap">
                        <div class="testimonial-item">
                            <div class="d-flex align-items-center">
                                <img src="~/assets/img/testimonials/640px-Python.svg.jpg" class="testimonial-img flex-shrink-0" alt="">
                                <div>
                                    <h3>Python</h3>
                                    <h4>資料科學、機器學習、網站開發等</h4>
                                    <div class="stars">
                                        <i class="bi bi-fire"></i>
                                        <i class="bi bi-fire"></i>
                                        <i class="bi bi-fire"></i>
                                        <i class="bi bi-fire"></i>
                                        <i class="bi bi-fire"></i>
                                    </div>
                                </div>
                            </div>
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                熱門原因：Python 的語法簡單、易讀，對於初學者來說，是非常友善的入門語言。同時也有強大的社區支援，許多函式庫和框架可以方便開發者使用。
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                        </div>
                    </div>
                </div><!-- End testimonial item -->
                <!-- 輪播卡片2 -->
                <div class="swiper-slide">
                    <div class="testimonial-wrap">
                        <div class="testimonial-item">
                            <div class="d-flex align-items-center">
                                <img src="~/assets/img/testimonials/JavaScript-logo.jpg" class="testimonial-img flex-shrink-0" alt="">
                                <div>
                                    <h3>JavaScript</h3>
