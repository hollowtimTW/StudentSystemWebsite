}

<div class="header">
    <!-- 主頁上方操作流程序，記得有新增頁面時要記得編輯 -->
    <div class="left">
        <h1>@ViewData["Title"]</h1>
        <ul class="breadcrumb">
            <li><a asp-area="" asp-controller="SystemBackground" asp-action="Index">首頁</a></li>
            /
            <li><a asp-area="video_management" asp-controller="T影片Video" asp-action="Index">Index</a></li>
            /
            <li><a href="#" class="active">@ViewData["Title"]</a></li>
        </ul>
    </div>
    <!-- 主頁上方操作流程序-->
</div>
<div>
    <ul class="crudlist">
    
        <li>
           @*  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                新增
            </button> *@
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" id="buttoncreate">
                新增
            </button>
        </li>
    @*     <li><button class="btn btn-primary">刪除</button></li>
      
        <li><button class="btn btn-secondary">修改</button></li> *@
    </ul>
</div>
<div class="bottom-data">
    <div class="orders">
        <div class="header">
            @* 表格標題輸入地方 *@
            <i class='bx bx-receipt'></i> <!-- 表格的小icon -->
            <h3>影片管理</h3> <!-- 表格的名稱 -->
            @*             <i class='bx bx-filter'></i>
            <i class='bx bx-search'></i>  *@

        </div>
        @* 表格內容輸入地方 *@
        <table id="test_table">
            <thead class="imthead">
                <tr>
                    <td>@Html.DisplayNameFor(model => model.FVideoTitle)</td>
                    <td>@Html.DisplayNameFor(model =>model.FUrl)</td>
                    <td>@Html.DisplayNameFor(model => model.FPrice)</td>
                    <td>@Html.DisplayNameFor(model => model.科目id)</td>
                    <td>@Html.DisplayNameFor(model => model.FImagePath)</td>

                </tr>
            </thead>

            @* 表格內容輸入地方 *@
        </table>

        @* 表格輸入結束 *@
    </div>
</div>
@* 動態視窗 *@
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="videoForm" enctype="multipart/form-data">
                    <input type="hidden" id="videoId" />
                    <div class="mb-3">
                        <label for="videoTitle" class="form-label">影片標題</label>
                        <input type="text" class="form-control" id="videoTitle" name="videoTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="videoUrl" class="form-label">影片</label>
                        <input type="file" class="form-control" id="videoUrl" name="videoUrl" required accept="image/*">
                    </div>
                    <div class="mb-3">
                        <label for="videoPrice" class="form-label">價格</label>
                        <input type="text" class="form-control" id="videoPrice" name="videoPrice" required>
                    </div>
                    <div class="mb-3">
                        <div class="dropdown">
                            <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="subjectid" name="subjectid">
                            </select>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                <button type="button" class="btn btn-primary" id="subbtn">送出</button>
            </div>
        </div>
    </div>
</div>

