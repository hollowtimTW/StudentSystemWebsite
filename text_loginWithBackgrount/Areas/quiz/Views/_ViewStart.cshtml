@{
    var controllerName = ViewContext.RouteData.Values["controller"] as string;
    var actionName = ViewContext.RouteData.Values["action"] as string;
    var areaName = ViewContext.RouteData.Values["area"] as string;

    string layout = "_Layout";

    if (controllerName == "QuizBg" || controllerName == "Board")
    {
        layout = "_SystemBackgroundLayout ";
    }
    else
    {
        layout = "_Layout";
    }
    Layout = layout;
}
