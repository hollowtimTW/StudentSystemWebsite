@model Class_system_Backstage_pj.Areas.course_management.ViewModel.T課程班級科目評分.RateFormViewModel


<div class="p-2">
    <h4 class="text-center">Edit</h4>
    <hr />
    <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
                <input type="hidden" asp-for="評分主表id" />          
                <input type="hidden"  asp-for="班級科目id"/>          
                <input type="hidden" asp-for="學生id" class="form-control" />
            
            
            <div class="form-group" type="hidden">
                <label asp-for="狀態" class="control-label"></label>
                <input asp-for="狀態" class="form-control" value="2" readonly />
            </div>
           
      </div>

        <div>
            @foreach (var category in Model.T課程評分s.GroupBy(p => p.評分分類))
            {
                <h5 style="color: yellowgreen">@category.Key</h5>
                <ul>
                    <!-- Loop through ratings in the current category -->
                    @foreach (var rating in category)
                    {
                        <li>
                            <p>@rating.評分題目</p>
                             <input type="number" class="form-control" value="@rating.評分" name="評分s[@rating.評分id]" min="1" max="5" />
                        </li>
                    }
                </ul>
            }
        </div>

        
        <div class="form-group">
            <label asp-for="改進意見" class="control-label"></label>
            <input asp-for="改進意見" class="form-control" />
            <span asp-validation-for="改進意見" class="text-danger"></span>
        </div>

        <div class="form-group text-end">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
  

   

</div>


        








@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
