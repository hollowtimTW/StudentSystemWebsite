@model Class_system_Backstage_pj.Models.T課程課程

<div class="p-4">
    <div class="row">
         <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row visually-hidden">
                <div class="form-group">
                    <label asp-for="班級科目id" class="control-label"></label>
                    <input asp-for="班級科目id" class="form-control" value="@ViewBag.CourseData" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="狀態" class="control-label"></label>
                    <input asp-for="狀態" class="form-control" value="1" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="值日生id" class="control-label"></label>
                    <input asp-for="值日生id" class="form-control" value="22" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="課堂摘要" class="control-label"></label>
                    <input asp-for="課堂摘要" class="form-control" value="..." type="hidden" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="開始時間" class="control-label"></label>
                        <input asp-for="開始時間" class="form-control" />
                        <span asp-validation-for="開始時間" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">                
                    <div class="form-group">
                        <label asp-for="結束時間" class="control-label"></label>
                        <input asp-for="結束時間" class="form-control" />
                        <span asp-validation-for="結束時間" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="w-100 text-end mt-2" >
                <input id="create_btn" type="submit" value="submit" class="btn btn-success d-inline-block" />
            </div>
         </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
