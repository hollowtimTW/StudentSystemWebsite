@{
    var controllerName = ViewContext.RouteData.Values["controller"] as string;
    var actionName = ViewContext.RouteData.Values["action"] as string;
    var areaName = ViewContext.RouteData.Values["area"] as string;

    string layout = "_Layout";

    string[] allowedActions = { 
        "resetPassword", 
        "StudentIndex", 
        "StudentRegister",
        "StudentForgetPassword",
        "StudentResetPassword"
    };

    if (controllerName == "Login" && allowedActions.Contains(actionName))
    {
        layout = "_Layout";
    }
    else if (controllerName == "Login")
    {
        layout = null;
    }
    else if (controllerName == "SystemBackground")
    {
        layout = "_SystemBackgroundLayout ";
    }
    else if (controllerName == "StoreBackground")
    {
        layout = "_SystemStoreBackgroundLayout";
    }
    else
    {
        layout = "_Layout";
    }
    Layout = layout;
}
