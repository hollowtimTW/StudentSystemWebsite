            }

        .ui-slider-horizontal .ui-slider-handle {
            top: -.5em;
            margin-left: -.6em;
        }

        .ui-slider a:focus {
            outline: none;
        }

        #slider-range {
            width: 90%;
            margin: 0 auto;
        }

        #time-range {
            width: 100%;
        }
    </style>
}
